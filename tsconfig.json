{
    "include": [
        "src/client/index.tsx"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es2017",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
            "Src/*": ["src/*"],
            "Components/*": ["src/client/components/*"],
            "Assets/*": ["src/assets/*"],
            "Fonts/*": ["src/assets/fonts/*"],
        }
    },
    "files": [
        "typings/declarations.d.ts"
    ]
}
