{
    "name": "alfa-code-platform",
    "version": "1.0.0",
    "description": "Сервис для подготовки IT специалистов (Основная платформа для пользователей)",
    "main": "index.js",
    "scripts": {
        "lint-js": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
        "lint-js-fix": "eslint ./src/ --ext .js,.jsx,.ts,.tsx --fix",
        "lint-css": "stylelint ./src/**/*.[s]css",
        "lint-css-fix": "stylelint ./src/**/*.[s]css --fix",
        "lint": "yarn lint-css && yarn lint-js",
        "install:dependencies:prod": "yarn install --production",
        "precommit": "yarn lint",
        "clear": "rm -rf ./.build",
        "build:client:prod": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.client.prod.js",
        "build:client:dev-server": "cross-env NODE_ENV=development webpack-dev-server --config ./configs/webpack.config.client.dev.js",
        "build:server:prod": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.server.prod.js",
        "build:server:dev:watch": "cross-env NODE_ENV=development webpack --watch --config ./configs/webpack.config.server.prod.js",
        "build:all:prod": "cross-env NODE_ENV=production yarn clear && yarn build:client:prod && yarn build:server:prod",
        "start:server": "cross-env NODE_ENV=development JWT_SECRET_KEY=secret DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres node ./.build/server.js",
        "start:server:nodemon": "cross-env NODE_ENV=development JWT_SECRET_KEY=secret DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres nodemon --inspect ./.build/server.js --watch ./.build/server.js",
        "start:dev": "npm-run-all --parallel build:server:dev:watch start:server:nodemon build:client:dev-server",
        "db:migrate": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.server.prod.js && cross-env DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres node ./.build/migrations.js",
        "deploy": "sh ./deploy/deploy.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/alfa-code-space/alfa-code-platform.git"
    },
    "author": "hydrock",
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/alfa-code-space/alfa-code-platform/issues"
    },
    "homepage": "https://gitlab.com/alfa-code-space/alfa-code-platform#readme",
    "devDependencies": {
        "@types/hapi": "^18.0.3",
        "@types/node": "^14.6.0",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-router": "^5.1.8",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-syntax-highlighter": "^11.0.4",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
