{
    "name": "webhandbook",
    "version": "1.0.0",
    "description": "SPA - Справочные материалы для тех кто изучает HTML и CSS",
    "main": "index.js",
    "scripts": {
        "lint-js": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
        "lint-js-fix": "eslint ./src/ --ext .js,.jsx,.ts,.tsx --fix",
        "lint-css": "stylelint ./src/**/*.[s]css",
        "lint-css-fix": "stylelint ./src/**/*.[s]css --fix",
        "lint": "yarn lint-css && yarn lint-js",
        "install:dependencies:prod": "yarn install --production",
        "precommit": "yarn lint",
        "clear": "rm -rf ./.build",
        "build:client:prod": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.client.prod.js",
        "build:client:dev-server": "cross-env NODE_ENV=development webpack-dev-server --config ./configs/webpack.config.client.dev.js",
        "build:server:prod": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.server.prod.js",
        "build:server:dev:watch": "cross-env NODE_ENV=development webpack --watch --config ./configs/webpack.config.server.prod.js",
        "build:all:prod": "cross-env NODE_ENV=production yarn clear && yarn build:client:prod && yarn build:server:prod",
        "start:server": "cross-env NODE_ENV=development node ./.build/server.js",
        "start:server:nodemon": "cross-env NODE_ENV=development nodemon --inspect ./.build/server.js --watch ./.build/server.js",
        "start:dev": "npm-run-all --parallel build:server:dev:watch start:server:nodemon build:client:dev-server",
        "npm-check": "npx npm-check -i Components -i Assets -i Pages -i Src"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://github.com/alfa-code/web-handbook.git"
    },
    "author": "hydrock",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/alfa-code/web-handbook/issues"
    },
    "homepage": "https://github.com/alfa-code/web-handbook#readme",
    "devDependencies": {
        "@types/hapi": "^18.0.3",
        "@types/node": "^14.6.0",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-router": "^5.1.8",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-syntax-highlighter": "^11.0.4",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "assets-webpack-plugin": "^5.1.1",
        "cross-env": "^7.0.2",
        "css-loader": "^4.2.1",
        "eslint": "^7.7.0",
        "eslint-plugin-chai-friendly": "^0.6.0",
        "eslint-plugin-class-methods-use-this-regexp": "^0.1.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^30.2.4",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "eslint-plugin-sort-class-members": "^1.8.0",
        "favicons-webpack-plugin": "^4.2.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.3.0",
        "mini-css-extract-plugin": "^0.10.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "sass-loader": "^9.0.3",
        "stylelint": "^13.6.1",
        "stylelint-config-airbnb": "^0.0.0",
        "terser-webpack-plugin": "^4.1.0",
        "ts-loader": "^8.0.3",
        "typescript": "^4.0.2",
        "typescript-eslint": "^0.0.1-alpha.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpackbar": "^4.0.0"
    },
    "dependencies": {
        "@hapi/hapi": "20.0.0",
        "@hapi/inert": "^6.0.2",
        "@hapi/vision": "^6.0.1",
        "axios": "^0.21.0",
        "connected-react-router": "^6.8.0",
        "formik": "^2.2.3",
        "hapi-error": "^2.2.0",
        "hapi-swagger": "14.0.0",
        "history": "4.10.1",
        "include-media": "^1.4.9",
        "joi": "17.x",
        "lodash": "^4.17.20",
        "normalize.css": "^8.0.1",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-redux": "^7.2.1",
        "react-router-dom": "^5.2.0",
        "react-toastify": "^6.0.8",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3",
        "webpack-node-externals": "^2.5.2",
        "yarn": "^1.21.1"
    }
}
