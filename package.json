{
    "name": "webhandbook",
    "version": "1.0.0",
    "description": "SPA - Справочные материалы для тех кто изучает HTML и CSS",
    "main": "index.js",
    "scripts": {
        "lint-js": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
        "lint-js-fix": "eslint ./src/ --ext .js,.jsx,.ts,.tsx --fix",
        "lint-css": "stylelint ./src/**/*.[s]css",
        "lint-css-fix": "stylelint ./src/**/*.[s]css --fix",
        "lint": "yarn lint-css && yarn lint-js",
        "install:dependencies:prod": "yarn install --production",
        "precommit": "yarn lint",
        "clear": "rm -rf ./.build",
        "build:client:dev": "cross-env NODE_ENV=development webpack -c ./configs/webpack.config.client.dev.js",
        "build:client:dev:watch": "cross-env NODE_ENV=development webpack --watch -c ./configs/webpack.config.client.dev.js",
        "build:client:dev-server": "cross-env NODE_ENV=development webpack serve -c ./configs/webpack.config.client.dev.js",
        "build:client:prod": "cross-env NODE_ENV=production webpack -c ./configs/webpack.config.client.prod.js",
        "build:server:dev": "cross-env NODE_ENV=development webpack -c ./configs/webpack.config.server.prod.js",
        "build:server:dev:watch": "cross-env NODE_ENV=development webpack --watch -c ./configs/webpack.config.server.prod.js",
        "build:server:prod": "cross-env NODE_ENV=production webpack -c ./configs/webpack.config.server.prod.js",
        "build:all:prod": "cross-env NODE_ENV=production yarn clear && yarn build:client:prod && yarn build:server:prod",
        "start:server": "cross-env NODE_ENV=development node ./.build/server.js",
        "start:server:nodemon": "cross-env NODE_ENV=development nodemon --delay 10 --inspect ./.build/server.js --watch ./.build/server.js",
        "start:dev": "npm-run-all --parallel build:server:dev:watch build:client:dev:watch start:server:nodemon",
        "npm-check": "npx npm-check -i Components -i Assets -i Pages -i Src"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://github.com/alfa-code/web-handbook.git"
    },
    "author": "hydrock",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/alfa-code/web-handbook/issues"
    },
    "homepage": "https://github.com/alfa-code/web-handbook#readme",
    "dependencies": {
        "@hapi/hapi": "^20.0.1",
        "@hapi/hoek": "^9.1.0",
        "@hapi/inert": "^6.0.2",
        "@hapi/vision": "^6.0.1",
        "axios": "^0.21.0",
        "connected-react-router": "^6.8.0",
        "formik": "^2.2.3",
        "hapi-error": "^2.2.0",
        "hapi-swagger": "14.0.0",
        "history": "^4.10.1",
        "include-media": "^1.4.9",
        "joi": "17.x",
        "lodash": "^4.17.20",
        "normalize.css": "^8.0.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-redux": "^7.2.1",
        "react-router-dom": "^5.2.0",
        "react-toastify": "^6.0.8",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3",
        "webpack-node-externals": "^2.5.2"
    },
    "devDependencies": {
        "@alfa-code/alfa-code-presets": "^1.1.6",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/hapi__hapi": "^20.0.2",
        "@types/node": "^14.6.0",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-router": "^5.1.8",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-syntax-highlighter": "^13.5.0",
        "assets-webpack-plugin": "^6.0.3",
        "cross-env": "^7.0.2",
        "css-loader": "^5.0.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "mini-css-extract-plugin": "^1.3.0",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "sass-loader": "^10.0.5",
        "style-loader": "^2.0.0",
        "terser-webpack-plugin": "^5.0.3",
        "ts-loader": "^8.0.10",
        "typescript": "^4.0.2",
        "webpack": "^5.4.0",
        "webpack-assets-manifest": "^3.1.1",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0",
        "webpackbar": "^5.0.0-3"
    }
}
