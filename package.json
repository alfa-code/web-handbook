        "eslint-plugin-chai-friendly": "^0.6.0",
        "eslint-plugin-class-methods-use-this-regexp": "^0.1.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^30.2.4",
